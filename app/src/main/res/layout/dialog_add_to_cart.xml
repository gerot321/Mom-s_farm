<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/button_choose_image"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/border_black"
                android:layout_width="match_parent"
                android:layout_height="185dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="NO IMAGE"
                    android:textColor="@color/colorBlack"
                    android:textSize="35dp" />
                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/image_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="0dp"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="5"
                android:textColor="@color/colorBlack"
                android:textSize="22sp"
                tools:text="Sawi"/>


            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:text="Tentukan ukuran frame:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginRight="10dp"
                    android:id="@+id/width"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:hint="Lebar"
                    app:met_floatingLabel="highlight"
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:ellipsize="start"
                    android:background="@drawable/border_black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="22sp"
                    android:layout_marginBottom="10dp"
                    />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/height"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:hint="Lebar"
                    android:paddingHorizontal="10dp"
                    app:met_floatingLabel="highlight"
                    android:inputType="number"
                    android:background="@drawable/border_black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="18sp"
                    app:met_floatingLabelTextSize="22sp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>


            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/colorBlack"
                android:text="Pilih warna mattboard:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/border_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/mattboard_option"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:text="Pilih jenis linen:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/border_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/linen_option"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:text="Pilih jenis kaca:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/border_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/glass_option"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp" />
            </LinearLayout>



            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="240dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/plus_stock"
                    android:background="@drawable/fullblack"
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="50dp">

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textSize="35sp"
                        android:layout_centerInParent="true"
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/product_stock_edt"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/border_black"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="22sp" />
                <RelativeLayout
                    android:id="@+id/minus_stock"
                    android:background="@drawable/fullblack"
                    android:layout_width="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_height="50dp">
                    <ImageView
                        android:background="@drawable/minus_icon"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="6dp">

                    <Button
                        android:background="@color/colorBlack"
                        android:id="@+id/cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowColor="@android:color/black"
                        android:text="Beli Langsung"
                        android:textColor="@android:color/white"
                        />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="6dp">

                    <Button
                        android:background="@color/colorBlack"
                        android:id="@+id/add_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:shadowColor="@android:color/black"
                        android:text="+ Keranjang"
                        android:textColor="@android:color/white"
                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="Total Harga Barang: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Rp 0"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
